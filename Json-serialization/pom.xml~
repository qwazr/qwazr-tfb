    <name>Json-serialization</name>

    <!-- To use the SNAPSHOT version -->
    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <pluginRepositories>
        <pluginRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>com.qwazr</groupId>
            <artifactId>qwazr-server</artifactId>
            <version>1.0.1-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <qwazr.version>1.0.1-SNAPSHOT</qwazr.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.qwazr</groupId>
                <artifactId>qwazr-maven-plugin</artifactId>
                <version>${qwazr.version}</version>
                <configuration>
                    <listenAddr>0.0.0.0</listenAddr>
                    <services>
                        <param>webapps</param>
                        <param>scripts</param>
                        <param>schedulers</param>
                    </services>
                    <groups>
                        <param>index</param>
                    </groups>
                    <etcFilters>
                        <param>*.json</param>
                    </etcFilters>
                </configuration>
            </plugin>
        </plugins>
    </build>
